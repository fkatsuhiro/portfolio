---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "../components/ThemeToggle";
import HomeImage from "../assets/homeImg.png";
import PageLinkBlock from "../components/PageLinkBlock";

const menuLinks = [
	{
		title: "About",
		href: "/about",
		desc1: "Who am I.",
		desc2: "My story, skills, and where to find me.",
	},
	{
		title: "Works",
		href: "/works",
		desc1: "Development Lab.",
		desc2: "Productu I build. A collection of tools and ideas.",
	},
	{
		title: "Slides",
		href: "/slides",
		desc1: "Talks & Slides.",
		desc2: "Sharig knowledge at tech conference and events.",
	},
	{
		title: "Blogs",
		href: "/blogs",
		desc1: "Writing.",
		desc2: "Articles, notes, and technical dives.",
	},
];
---

<Layout title="My Portfolio">
	<main>
		<section
			class="relative h-screen w-full flex flex-col md:flex-row overflow-hidden"
		>
			<div class="absolute top-4 right-4 z-20">
				<ThemeToggle client:load />
			</div>
			<div
				class="w-full md:w-1/2 h-full flex flex-col justify-end p-8 md:p-16 z-10 bg-white dark:bg-gray-950"
			>
				<div class="mb-40 mx-10">
					<h2
						class="text-5xl md:text-6xl font-bold tracking-tight text-gray-900 dark:text-white leading-tight"
					>
						Furuichi Katsuhiro
					</h2>
					<p class="mt-4 text-xl text-gray-500 dark:text-gray-400">
						Frontend Developer
					</p>
				</div>
			</div>
			<div
				class="w-full md:w-1/2 h-1/2 md:h-full bg-white dark:bg-gray-950 flex items-center justify-center relative"
			>
				<img
					src={HomeImage.src}
					alt="Portrait"
					class="w-3/5 h-3/5 object-cover"
				/>
				<div
					class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent md:hidden pointer-events-none"
				>
				</div>
			</div>
			<div
				class="absolute bottom-20 right-1/2 -translate-x-1/2 z-30 animate-bounce mb-10"
			>
				<span class="text-sm text-gray-500 dark:text-gray-400"
					>Scroll Down</span
				>
			</div>
		</section>
		<section class="min-h-screen py-20 px-4 max-w-4xl mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-10 pt-20">
				{
					menuLinks.map((link) => (
						<PageLinkBlock
							href={link.href}
							title={link.title}
							desc1={link.desc1}
							desc2={link.desc2}
							client:visible
						/>
					))
				}
			</div>
		</section>
	</main>
</Layout>
